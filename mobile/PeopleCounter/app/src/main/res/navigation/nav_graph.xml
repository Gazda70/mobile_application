<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/setUpDetection">
    <fragment
        android:id="@+id/calendarFragment"
        android:name="pl.polsl.peoplecounter.date_setup.DateFragment"
        android:label="calendar_fragment"
        tools:layout="@layout/date_fragment">
        <action
            android:id="@+id/action_calendarFragment_to_startTimeFragment"
            app:destination="@id/startTimeFragment" />
    </fragment>
    <fragment
        android:id="@+id/setUpDetection"
        android:name="pl.polsl.peoplecounter.SetUpDetection"
        android:label="set_up_detection_fragment"
        tools:layout="@layout/set_up_detection_fragment">
        <action
            android:id="@+id/action_setUpDetection_to_calendarFragment"
            app:destination="@id/calendarFragment" />
        <action
            android:id="@+id/action_setUpDetection_to_dateForStatistics"
            app:destination="@id/dateForStatistics" />
    </fragment>
    <fragment
        android:id="@+id/endTimeFragment"
        android:name="pl.polsl.peoplecounter.time_setup.EndTimeFragment"
        android:label="EndTimeFragment" >
        <action
            android:id="@+id/action_endTimeFragment_to_setUpDetection"
            app:destination="@id/setUpDetection" />
    </fragment>
    <fragment
        android:id="@+id/startTimeFragment"
        android:name="pl.polsl.peoplecounter.time_setup.StartTimeFragment"
        android:label="StartTimeFragment">
        <action
            android:id="@+id/action_startTimeFragment_to_endTimeFragment"
            app:destination="@id/endTimeFragment" />
    </fragment>
    <fragment
        android:id="@+id/dateForStatistics"
        android:name="pl.polsl.peoplecounter.statistics_presentation.DateForStatistics"
        android:label="DateForStatistics" >
        <action
            android:id="@+id/action_dateForStatistics_to_statisticPresentation"
            app:destination="@id/statisticPresentation" />
    </fragment>
    <fragment
        android:id="@+id/statisticPresentation"
        android:name="pl.polsl.peoplecounter.statistics_presentation.StatisticPresentation"
        android:label="statistic_presentation_fragment"
        tools:layout="@layout/statistic_presentation_fragment" />
</navigation>